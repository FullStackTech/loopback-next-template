{
    "compilerOptions": {
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/@loopback/*"]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": ["es2017", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2017",
      "typeRoots": ["node_modules/@types"]
    },
    "include": [
      "**/*"
    ],
    "exclude": [
      "**/*.d.ts"
    ]
  }
  